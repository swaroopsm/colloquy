<%= form_for(@submission, :html => {:multipart => true}) do |f| %>
  <% if @submission.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@submission.errors.count, "error") %> prohibited this submission from being saved:</h2>

      <ul>
      <% @submission.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :authors %><br />
    <%= f.text_area :authors %>
  </div>
  <div class="field">
    <%= f.label :aim %><br />
    <%= f.text_area :aim, :class => "tinymce" %>
  </div>
  <div class="field">
    <%= f.label :methods %><br />
    <%= f.text_area :methods, :class => "tinymce" %>
  </div>
  <div class="field">
    <%= f.label :results %><br />
    <%= f.text_area :results, :class => "tinymce" %>
  </div>
  <div class="field">
    <%= f.label :conservation %><br />
    <%= f.text_area :conservation, :class => "tinymce" %>
  </div>
  <div class="field">
    <%= f.label :preference %><br />
    <%= f.radio_button :preference, "1" %> Talk
    <%= f.radio_button :preference, "2" %> Poster
  </div>
  <div class="field">
    <%= f.label :bursary_for %><br />
    <%= f.text_field :bursary_for %>
  </div>
  <div class="field">
    <%= f.label :bursary_why %><br />
    <%= f.text_area :bursary_why %>
  </div>
  <div>
  	<%= fields_for :attachments do |a| %>
  		<%= a.file_field :pic %>
  	<% end -%>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= tinymce %>
