<h1>Listing submissions</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Authors</th>
    <th>Content</th>
    <th>Conference</th>
    <th>User</th>
    <th>Approved</th>
    <th>Preference</th>
    <th>Bursary for</th>
    <th>Bursary why</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @submissions.each do |submission| %>
  <tr>
    <td><%= submission.title %></td>
    <td><%= submission.authors %></td>
    <td><%= submission.content %></td>
    <td><%= submission.conference_id %></td>
    <td><%= submission.user_id %></td>
    <td><%= submission.approved %></td>
    <td><%= submission.preference %></td>
    <td><%= submission.bursary_for %></td>
    <td><%= submission.bursary_why %></td>
    <td><%= link_to 'Show', submission %></td>
    <td><%= link_to 'Edit', edit_submission_path(submission) %></td>
    <td><%= link_to 'Destroy', submission, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

