<table id="datatable">
	<thead>
		 <tr>
		    <th>Conference</th>
		    <th>Event</th>
		    <th>Title</th>
		    <th>Presenter</th>
		    <th>Day</th>
		    <th>Start time</th>
		    <th>Session Length (in minutes)</th>
		    <th>Venue</th>
		  </tr>
	</thead>
	<tbody>
		<% if @schedules.any? %>
			<% @schedules.each do |schedule| %>
			  <tr>
			  	<td><%= schedule.schedulable.conference.title %></td>
			   	<td><%= schedule.schedulable_type %></td>
			    <td><%= schedule.schedulable.title %></td>
			    <td><%= schedule.schedulable.presenter %></td>
			    <td><%= schedule.day %></td>
			    <td><%= schedule.starttime.strftime("%H : %M") %></td>
			    <td><%= schedule.minutes %></td>
			    <td><%= schedule.venue%></td>
			  </tr>
			<% end %>
		<% else %>
			<tr>
				<td>No schedules yet!</td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>
				<td></td>

			</tr>
		<% end %>
	</tbody>
</table>