<p class="instruction">
	Click on the title link below to edit.
</p>

<table id="datatable">
	<thead>
		<tr>
			<th>Page Name</th>
			<th>Conference</th>
			<th>Menu Parent</th>
			<th>Active</th>
			<th>Page Slug</th>
			<th>Actions</th>
		</tr>
	</thead>
	<tbody>
		<% @pages.each do |p| %>
			<tr>
				<td><%= link_to p.title, edit_conference_page_path(p.conference, p), :remote => true %></td>
				<td><%= p.conference.title %></td>
				<td><%= p.pagecat.title unless p.pagecat == nil %></td>
				<td><%= p.active %></td>
				<td><%= p.slug %></td>
				<td><%= link_to "Edit", edit_conference_page_path(p.conference, p), :remote => true %> &nbsp;&nbsp;&nbsp;
					<%= link_to 'Delete', conference_page_path(p.conference, p), method: :delete, data: { confirm: 'Are you sure?' }, :remote => true %></td>
			</tr>
		<% end %>
	</tbody>
</table>