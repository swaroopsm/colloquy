<h1>Listing boards</h1>

<%= link_to "Create Board", new_conference_board_path(@conference), :remote => true if can? :create, Board %>

<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>User</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @boards.each do |board| %>
  <tr>
    <td><%= board.title %></td>
    <td><%= board.description %></td>
    <td><%= board.user_id %></td>
    <td><%= link_to 'Show', '#' %></td>
    <td><%= link_to 'Edit', '#'  %></td>
    <td><%= link_to 'Destroy', '#' %></td>
  </tr>
<% end %>
</table>

